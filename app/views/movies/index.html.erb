<article class="index-page">
  <table>
    <tr>
      <th>Ranking</th>
      <th>Name</th>
      <th class="remove">Director</th>
    </tr>

    <% @movies.each do |movie| %>
    <tr>
      <td>
        <%= link_to "â¬†", movie_upvote_path(movie.id), method: :patch %>
        Ranked: <%= movie.num_votes %>
      </td>
      <td>
        <%= link_to movie.title, {action: 'show', id: movie}, method: :get %>
      </td>
      <td class="remove">
        <%= movie.director %>
      </td>
    </tr>
    <% end %>
  </table>

  <div class="index-buttons">
    <%= button_to "View All Media", root_path, method: :get %>
    <%= button_to "Add Movie", new_movie_path, method: :get %>
  </div>
</article>
